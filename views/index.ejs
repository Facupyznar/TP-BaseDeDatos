<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8"/>
    <title>MovieWeb</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

<!-- Header sin “casa” (no hace falta en Home) -->
<header class="header">
    <!-- Menú hamburguesa -->
    <button class="menu-button" id="menuButton" onclick="toggleMenu()">
        <div></div><div></div><div></div>
    </button>

    <nav class="menu-content" id="menuContent">
        <% if (!user) { %>
            <a href="/login" class="menu">Iniciar sesión</a>
            <a href="/register" class="menu">Registrarse</a>
        <% } else if (isAdmin) { %>
            <a href="/users" class="menu">Lista de usuarios</a>
            <form action="/logout" method="POST"><button class="menu" type="submit">Cerrar sesión</button></form>
        <% } else { %>
            <a href="/profile/<%= user.id %>" class="menu">Mi perfil</a>
            <form action="/logout" method="POST"><button class="menu" type="submit">Cerrar sesión</button></form>
        <% } %>
    </nav>
</header>

<!-- Hero centrado -->
<main class="home">
    <h1 class="home-title">MovieWeb</h1>
    <form class="searchbar home-search" action="/buscar" method="GET">
        <select name="type" aria-label="Tipo de búsqueda">
            <option value="todo" selected>Todo</option>
            <option value="movie">Película</option>
            <option value="actor">Actor</option>
            <option value="director">Director</option>
            <option value="keyword">Keyword</option>
        </select>
        <input class="input" type="text" name="q" placeholder="Buscar..." required />
        <button class="btn" type="submit">Buscar</button>
    </form>
</main>

<script>
    function toggleMenu() {
        const btn = document.getElementById("menuButton");
        const menu = document.getElementById("menuContent");
        btn.classList.toggle("open");
        menu.classList.toggle("open");
    }
</script>

</body>
</html>
