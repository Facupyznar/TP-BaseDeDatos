<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8"/>
    <title>Resultados para "<%= q %>"</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<header class="header">
    <a class="home-btn" href="/">
        <img src="/imgs/casa3.png" alt="Inicio">
    </a>
</header>

<h1 class="center-text">Resultados para "<%= q %>"</h1>

<!-- Películas -->
<% if (movies.length) { %>
    <h2 class="center-text">Películas</h2>
    <ul>
        <% movies.forEach(m => { %>
            <li class="center-text">
                <a href="/pelicula/<%= m.movie_id %>?from=search">
                    <%= m.title %>
                    <% if (m.release_date) { %> (<%= new Date(m.release_date).getFullYear() %>)<% } %>
                </a>
            </li>
        <% }) %>
    </ul>
<% } %>

<!-- Actores -->
<% if (actors.length) { %>
    <h2 class="center-text">Actores</h2>
    <ul>
        <% actors.forEach(a => { %>
            <li class="center-text">
                <a href="/actor/<%= a.person_id %>?from=search"><%= a.person_name %></a>
            </li>
        <% }) %>
    </ul>
<% } %>

<!-- Directores -->
<% if (directors.length) { %>
    <h2 class="center-text">Directores</h2>
    <ul>
        <% directors.forEach(d => { %>
            <li class="center-text">
                <a href="/director/<%= d.person_id %>?from=search"><%= d.person_name %></a>
            </li>
        <% }) %>
    </ul>
<% } %>

<% if (!movies.length && !actors.length && !directors.length) { %>
    <p class="center-text">No se encontraron resultados.</p>
<% } %>
</body>
</html>
